{
  "name": "@data-vision/server",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && pnpm copy-static",
    "copy-static": "node -e \"const fs=require('fs');const path=require('path');if(!fs.existsSync('dist/public'))fs.mkdirSync('dist/public',{recursive:true});\"",
    "start": "node dist/index.js",
    "package": "pnpm package:win && pnpm package:mac",
    "package:win": "pkg . --targets node18-win-x64 --output dist/data-vision-app-win.exe",
    "package:mac": "pkg . --targets node18-macos-x64 --output dist/data-vision-app-mac",
    "package:mac-arm": "pkg . --targets node18-macos-arm64 --output dist/data-vision-app-mac-arm",
    "package:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-macos-arm64 --out-path dist"
  },
  "dependencies": {
    "@data-vision/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "open": "^10.0.3",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/papaparse": "^5.3.14",
    "@yao-pkg/pkg": "^6.12.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/public/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
